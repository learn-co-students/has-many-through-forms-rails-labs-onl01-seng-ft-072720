<%= form_for @post do |f| %>
    <p>
        <%= f.label "Title: " %>
        <%= f.text_field :title %><br>
        <%= f.label "Content: " %>
        <%= f.text_field :content %><br>
        <%= f.label "Select a category: " %>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
        <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
            <%= categories_fields.label :name, "Or create a new category: " %>
            <%= categories_fields.text_field :name %>
        <% end %>
        <br>

        <%= f.submit "Create Post" %>
    </p>

<% end %>
